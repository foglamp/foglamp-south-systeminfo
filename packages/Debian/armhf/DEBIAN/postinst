##--------------------------------------------------------------------
##
## @postinst DEBIAN/postinst
## This script is used to execute post installation tasks.
##
## Author: Amarendra K Sinha
##
##--------------------------------------------------------------------

set -e

set_files_ownership () {
    chown -R root:root /usr/local/foglamp/python/foglamp/plugins/south/systeminfo
}

add_service () {
    output=$(curl -sX POST http://localhost:8081/foglamp/service -d '{"name": "systeminfo", "type": "south", "plugin": "systeminfo", "enabled": true}')
    echo $output
}

set_files_ownership
add_service
echo "systeminfo plugin is installed."
